<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layoutBackground">

    <TextView
        android:id="@+id/kitchenTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/kitchen_title"
        android:textColor="@color/textColorWhite"
        android:textSize="26sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <HorizontalScrollView
        android:id="@+id/kitchenChipGroupScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kitchenTitle" >

        <LinearLayout
            android:id="@+id/kitchenGroupContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_width="200dp"
            tools:layout_height="200dp"
            android:orientation="vertical"/>
    </HorizontalScrollView>



    <TextView
        android:id="@+id/tastyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/tasties"
        android:textColor="@color/textColorWhite"
        android:textSize="26sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kitchenChipGroupScroll"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tastyTitle">

        <LinearLayout
            android:id="@+id/tastyGroupContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_width="200dp"
            tools:layout_height="200dp"
            android:orientation="vertical"/>
    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>